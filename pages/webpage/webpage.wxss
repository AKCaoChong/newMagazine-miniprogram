
.share-txt{
  z-index: 999999;
  position: fixed;
  right: -30rpx;
  bottom: 50%;
  color: white;
  text-align: center;
  background-color: red;
  width:200rpx;
  height:72rpx;
  box-shadow:0rpx 4rpx 6rpx 0rpx rgba(18,46,102,0.5);
  border-radius:36rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
}

.list-group{
  z-index: 999999;
  background: #cccccc;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  transform: translateY(100%);
  /* height: 400rpx;
  overflow: scroll; */
}

.list-group .top-group{
  padding: 10rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
}

.top-group .close{
  width: 36rpx;
  height: 36rpx;
}

.list-group .goods-group{
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  align-items: center;
}

.goods-group .logo{
  padding: 10rpx;
  box-sizing: border-box;
  width: 100rpx;
  height: 100rpx;
}

.goods-group .goods-info{
  padding: 10rpx;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  color: #333333;
}
.goods-info .goods-title{
  padding: 10rpx;
  box-sizing: border-box;
}

.goods-info .goods-price{
  padding: 10rpx;
  box-sizing: border-box;
}


