.container .user-info{
  width: 100%;
  height: 200rpx;
  background: linear-gradient(#ffffff,#aaaaaa);
  display: flex;
  align-items: center;
}

.user-info .header{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  box-sizing: border-box;
  border: 4rpx #ffffff solid;
  /* box-shadow: 5rpx 5rpx 5rpx #eeeeee; */
  margin-left: 40rpx;
  
}

.user-info .nick-name{
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.address-title{
  width: 100%;
  margin-top: 10rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333333;
  background-color: #eeeeee;
}

.container .address-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  opacity: 0;
}

.container .address-group{
  margin-top: 30rpx;
  background-color: #eeeeee;
  width: 690rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  
}

.address-group text{
  color: #333333;
  font-size: 28rpx;
}

.container .add-address{
  margin: 60rpx auto 0;
  background-color: rgb(42, 43, 44);
  font-size: 30rpx;
  color: #ffffff;
  text-align: center;
  border-radius: 10rpx;
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.container .cancel{
  margin-top: 20rpx;
}

@keyframes easeShow{
  0%{opacity: 0;}
  100%{opacity: 1;}
}

@keyframes easeHide{
  0%{opacity: 1;}
  100%{opacity: 0;}
}

.showAnim{animation: easeShow 0.5s ease-in-out forwards}
.hideAnim{animation: easeHide 0.5s ease-in-out forwards}

.container .add-group{
  margin-top: 30rpx;
  background-color: #ffffff;
  width: 690rpx;
  /* padding: 20rpx; */
  box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  opacity: 0;
}

.add-group input{
  background: #eeeeee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333333;
  border: none;
  margin: 20rpx 0;
  
}

.add-group .picker{
  background: #eeeeee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333333;
  border: none;
  margin: 20rpx 0;
  /* height: ; */
}